{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,

        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist/**.*"
    ]
}